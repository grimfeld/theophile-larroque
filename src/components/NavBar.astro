---
import { contentfulClient } from '../lib/contentful';
import Button from './Button.astro';
import Menu from "./Menu.astro"

const logo = await contentfulClient.getAsset('1pstZEGrE1qiwL376qGDc1');

---
<nav class='border-b-[3px] border-black'>
  <div class='main items-center justify-between py-8 sticky top-0 gap-16 hidden lg:flex'>
    <img src={logo.fields.file.url} alt='logo' class='w-12' />
    <a href='/services'>Prestations</a>
    <a href='/about'>L'atelier</a>
    <a href='/contact' class='w-1/4'>
      <Button className='w-full'>Contact</Button>
    </a>
    <a href='/creations'>Cr√©ations</a>
    <!-- <a href='/blog'>Blog</a> -->
    <a href="/gallery">Galerie</a>
    <Button isSocial>
      <img src='/instagram.svg' alt='instagram' />
    </Button>
  </div>
  <div class="main flex lg:hidden items-center justify-between py-8 sticky top-0">
    <img src={logo.fields.file.url} alt='logo' class='w-12' />
    <img src="/menu.svg" alt="Menu">
    <Menu />
  </div>
</nav>

<script>
  const menu = document.querySelector('img[alt="Menu"]');
  let isOpen = false;

  menu?.addEventListener('click', () => {
    isOpen = !isOpen;
  });
</script>